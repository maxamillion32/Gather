<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/myevents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="15sp"
        android:text="@string/myEvents" />

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/home_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:verticalSpacing="20dp"
        android:horizontalSpacing="20dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/myevents"
        />

    <TextView
        android:id="@+id/hellohome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/discoverFlip"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="15sp"
        android:text="@string/discover" />

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_alignParentBottom="true"
        android:id="@+id/discoverFlip" >
        <FrameLayout    xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/defaultdiscover" />

            <TextView
                android:text="Event 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event1" />

        </FrameLayout>
        <FrameLayout    xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/framelayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/defaultdiscover" />

            <TextView
                android:text="Event 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event2" />



        </FrameLayout>
        <FrameLayout    xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/framelayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/defaultdiscover" />

            <TextView
                android:text="Event 3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event3" />
        </FrameLayout>
    </ViewFlipper>

</RelativeLayout>